<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TreeniTavoiteMobiiliAPP.AddNewUser"
             Title="AddNewUser">
    <StackLayout Margin="20">
        <Entry x:Name="FirstNameEntry" Placeholder="Etunimi" PlaceholderColor="Gray"
BackgroundColor="#f0f0f0"
TextColor="Black"
FontSize="16"
Margin="0,10,0,0"/>
        <Entry x:Name="LastNameEntry" Placeholder="Sukunimi" PlaceholderColor="Gray"
BackgroundColor="#f0f0f0"
TextColor="Black"
FontSize="16"
Margin="0,10,0,0" />
        <Entry x:Name="EmailEntry" Placeholder="Sähköpostiosoite" PlaceholderColor="Gray"
BackgroundColor="#f0f0f0"
TextColor="Black"
FontSize="16"
Margin="0,10,0,0" />
        <Button Text="Lisää käyttäjä" Clicked="Button_Clicked"/>
    </StackLayout>
</ContentPage>