<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TreeniTavoiteMobiiliAPP.NewExc"
             Title="Harjoitukset">

    <StackLayout>
        
        <Label Text="Täältä voit lisätä uuden harjoituksesi" 
           HorizontalOptions="Center" 
           VerticalOptions="CenterAndExpand" 
           Margin="0,20,0,20" 
           FontSize="20" />
        <Label x:Name="goalLabel" FontSize="Medium" />


        <Button Text="Tarkastele aiempia harjoituksiasi" FontSize="14" WidthRequest="220" HeightRequest="40" Clicked="Button_Clicked_1"></Button>

        
        <Entry Placeholder="Harjoituksen nimi"
           x:Name="exerciseNameEntry"
           PlaceholderColor="Gray"
           BackgroundColor="#f0f0f0"
           TextColor="Black"
           FontSize="16"
           Margin="0,10,0,0" />

        
        <Editor Placeholder="Muistiinpanot" x:Name="notesEditor" 
            PlaceholderColor="Gray"
            BackgroundColor="#f0f0f0"
            TextColor="Black"
            FontSize="16"
            Margin="0,10,0,0" />

        
        <Button Text="Tallenna" Clicked="Button_Clicked" />
        
       
    </StackLayout>
    
</ContentPage>
