<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TreeniTavoiteMobiiliAPP.ReachedGoals"
             Title="ReachedGoals">
    <StackLayout>
        <Frame Padding="24" CornerRadius="0">
            <Label Text="Treeni APP" HorizontalTextAlignment="Center" TextColor="Black" FontAttributes="Bold,Italic" FontSize="34"/>
        </Frame>


        <Label Text="Käyttäjän saavutetut tavoitteet" FontSize="Large" FontAttributes="Bold" VerticalOptions="StartAndExpand"></Label>

        <Label x:Name="nameLabel" FontSize="Medium" />




        <ListView x:Name="goal2List">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding GoalName}" FontSize="Medium" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>