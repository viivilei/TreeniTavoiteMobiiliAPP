<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TreeniTavoiteMobiiliAPP.AddNewGoal">

    <StackLayout Padding="20">
        <Label Text="Aseta uusi tavoite" FontSize="Large" HorizontalOptions="Center" Margin="0,0,0,20" />

        <Entry Placeholder="Tavoitteen nimi" x:Name="goalNameEntry"
               PlaceholderColor="Gray"
BackgroundColor="#f0f0f0"
TextColor="Black"
FontSize="16"
Margin="0,10,0,0"/>
        <Entry Placeholder="Muistiinpanot" x:Name="notesEntry" PlaceholderColor="Gray"
BackgroundColor="#f0f0f0"
TextColor="Black"
FontSize="16"
Margin="0,10,0,0" />

        <Button Text="Lisää tavoite" Clicked="Button_Clicked" HorizontalOptions="Center" Margin="0,20,0,0" />
    </StackLayout>

</ContentPage>