<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TreeniTavoiteMobiiliAPP.AddNewGoal">

    <StackLayout Padding="20">
        <Label Text="Uusi Goal" FontSize="Large" HorizontalOptions="Center" Margin="0,0,0,20" />

        <Entry Placeholder="Tavoitteen nimi" x:Name="goalNameEntry" />
        <Entry Placeholder="Muistiinpanot" x:Name="notesEntry" />

        <Button Text="Lisää Goal" Clicked="Button_Clicked" HorizontalOptions="Center" Margin="0,20,0,0" />
    </StackLayout>

</ContentPage>